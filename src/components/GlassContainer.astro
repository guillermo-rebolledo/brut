---
interface Props {
  class?: string;
  /** Padding: 'none' | 'sm' | 'md' | 'lg' */
  padding?: 'none' | 'sm' | 'md' | 'lg';
  /** Rounded corners: 'none' | 'sm' | 'md' | 'lg' | 'xl' | 'full' */
  rounded?: 'none' | 'sm' | 'md' | 'lg' | 'xl' | 'full';
  fullWidth?: boolean;
}

const {
  class: className = '',
  padding = 'md',
  rounded = 'lg',
  fullWidth = false,
} = Astro.props;

const paddingMap = {
  none: 'p-0',
  sm: 'p-2 sm:p-3',
  md: 'p-4 sm:p-5 md:p-5',
  lg: 'p-6 sm:p-8 md:p-10 lg:p-12',
};

const roundedMap = {
  none: 'rounded-none',
  sm: 'rounded-sm',
  md: 'rounded-md',
  lg: 'rounded-lg',
  xl: 'rounded-xl',
  full: 'rounded-full',
};
---

<div
  class:list={[
    fullWidth ? 'w-full' : 'w-fit',
    paddingMap[padding],
    roundedMap[rounded],
    /* Glass on dark: visible frosted panel */
    'bg-white/8',
    'backdrop-blur-xl',
    /* Clear border so the panel reads on black */
    'border border-white/25',
    /* Accent border tint (matches page gradient) */
    'border-t-primary/30',
    /* Glossy top edge â€“ stronger so it reads on black */
    'shadow-[inset_0_1px_0_0_rgba(255,255,255,0.12)]',
    /* Depth: soft dark shadow + very subtle primary glow */
    'shadow-[0_4px_24px_-4px_rgba(0,0,0,0.5),0_0_0_1px_rgba(0,0,0,0.2)]',
    className,
  ]}
>
  <slot />
</div>
